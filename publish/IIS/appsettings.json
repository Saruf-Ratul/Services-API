{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [ "http://localhost:4200", "http://localhost:3000" ],
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=YOUR_SQL_SERVER;Initial Catalog=Mobilize;Persist Security Info=True;User ID=YOUR_DB_USER;Password=YOUR_DB_PASSWORD;Connect Timeout=600;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "JobsConnection": "Data Source=YOUR_SQL_SERVER;Initial Catalog=myServiceJobs;Persist Security Info=True;User ID=YOUR_DB_USER;Password=YOUR_DB_PASSWORD;Connect Timeout=600;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "SchedulerConnection": "Data Source=YOUR_SQL_SERVER;Initial Catalog=msSchedulerV3;Persist Security Info=True;User ID=YOUR_DB_USER;Password=YOUR_DB_PASSWORD;Connect Timeout=600;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyForJWTTokenGenerationAtLeast32Characters",
    "Issuer": "ServicesAPI",
    "Audience": "ServicesAPIUsers",
    "ExpirationMinutes": 60
  },
  "OidcSettings": {
    "Authority": "https://your-identity-provider.com",
    "ClientId": "your-client-id",
    "ClientSecret": "your-client-secret",
    "RequireMFA": true
  },
  "EmailSettings": {
    "SMTP": "smtp.mailgun.org",
    "Port": "587",
    "SmtpUser": "your-email@example.com",
    "SmtpPassword": "YOUR_EMAIL_PASSWORD"
  },
  "TwilioSettings": {
    "AccountSid": "YOUR_TWILIO_ACCOUNT_SID",
    "AccountAuthToken": "YOUR_TWILIO_AUTH_TOKEN",
    "PhoneNumber": "+1234567890",
    "ApiKey": "YOUR_TWILIO_API_KEY"
  },
  "SoapServices": {
    "WiseteckServices": {
      "Address": "https://testsite.myserviceforce.com/wisetack/WiseteckServices.asmx",
      "Binding": "basicHttpBinding"
    },
    "PaymentService": {
      "Address": "https://dev-services.myserviceforce.com/xceleranccportal/PaymentService.asmx",
      "Binding": "basicHttpBinding"
    }
  },
  "SwaggerSettings": {
    "EnableSwagger": true,
    "EnableSwaggerUI": true,
    "DocumentTitle": "Services API",
    "RequireAuthentication": false,
    "RequireHttps": true
  },
  "SecuritySettings": {
    "EnableRateLimiting": true,
    "RateLimitPerMinute": 100,
    "RequireHttps": true,
    "EnableHSTS": true,
    "EnableSecurityHeaders": true
  }
}

